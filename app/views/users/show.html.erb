  <div class="fac_image">
    <img src="http://mox.jmls.edu/images/<%=@user.datatel_id %>.jpg"
    style="height:200px;width:auto;">
  </div>

<h1><%= @user.first_name %>  <%= @user.middle_name %> <%= @user.last_name %></h1>
<h4> <%= @user.title %> </h4>



<h3>Activities</h3>

    <% @activities.each do |service_type, activities| %>
      <h4><%= service_type %></h4>
      <% activities.each do |activity| %>
        
        <li>
          <% if current_user != nil && current_user.id == activity.user_id %>
            <a href="/activities/<%= activity.id %>/edit"> [EDIT]</a>
            <a data-confirm="Are you sure you want to delete this record?" href="/activities/<%= activity.id %>" data-method="delete" rel="nofollow" > [DELETE]</a>
            <% end %>
          <%= activity.title %> 
        
        </li>

      <% end %>
    <% end %>
  </ul>

<!-- Delete Record Button -->
    <a 
      data-confirm="Are you sure you want to delete the record for <%= @user.first_name %> <%= @user.last_name %>?" href="/users/<%= @user.id %>" data-method="delete" rel="nofollow" class="btn btn-danger show-page-btn" role="button">Delete
    </a>

<!-- Edit Profile Button -->
    <% if current_user %> 

    <a 
      href="/users/<%= @user.id %>/edit" class="btn btn-success show-page-btn" role="button"> Normal Edit
    </a>

    <% end %>